
<h1>Suggestions</h1>

<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Title</th>
      <th>Content</th>
      <th>Image</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggestions.each do |suggestion| %>
      <tr>
        <td><%= suggestion.item_id %></td>
        <td><%= suggestion.title %></td>
        <td><%= suggestion.content %></td>
        <td><%= suggestion.image %></td>
        <td><%= suggestion.city_id %></td>
        <td><%= link_to 'Show', suggestion %></td>
        <td><%= link_to 'Edit', edit_suggestion_path(suggestion) %></td>
        <td><%= link_to 'Destroy', suggestion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Suggestion', new_suggestion_path %>
